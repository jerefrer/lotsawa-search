---
interface Props {
	title: string;
	image: string;
}

import { GoogleAnalytics } from 'astro-google-analytics';

const { title, image } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<GoogleAnalytics id="G-ZZYF11K9L8" />
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="shortcut icon" type="image/svg" href="/lotsawa-search/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<main class="mx-auto p-4 pt-12 max-w-2xl">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	body {
		background: #F9F4E8;
    overflow-y: scroll;
	}
  mark {
    color: inherit;
  }

	.svelte-select * {
		cursor: pointer !important;
	}

	.list-item img {
		width: 22px;
		max-width: none;
		margin-top: 10px;
	}
::-webkit-scrollbar {
  width: 5px;
}
::-webkit-scrollbar-track {
  background: #f1f1f1;
}
::-webkit-scrollbar-thumb {
  background: #888;
}
::-webkit-scrollbar-thumb:hover {
  background: #555;
}
</style>
